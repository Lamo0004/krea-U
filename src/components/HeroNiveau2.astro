---
import TextBody from "./TextBody.astro";
import TextDisplay from "./TextDisplay.astro";
const { image, alt, display, textbody } = Astro.props;
---

<section class="pb-space-1800 -mx-10 md:-mx-60">
    <div class="relative">
        
        <div>
            <img src={image} alt={alt} class="w-full object-cover object-center brightness-50 h-150 md:max-h-180"/>
        </div>

        <div class="absolute inset-0 flex flex-col items-center justify-center z-10 text-center px-space-600 md:px-space-1400 lg:px-space-3200">
            <TextDisplay size="xl" stylingclasses="pb-space-025">{display}</TextDisplay>
            <TextBody size="large-regular" stylingclasses="pb-space-100 text-primary-50 px-space-600 md:px-space-1400 lg:px-space-2400">{textbody}</TextBody>
        </div>

    </div>
</section>