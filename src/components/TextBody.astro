---
// Henter parametrene fra Astro.props
const { htmlbodytext="p", size="medium", stylingclasses=""} = Astro.props; 
const Htmlbodytext = htmlbodytext;
 
//Tailwind classes - der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
"xl-bold": "text-body-xl font-bold",
"xl-regular": "text-body-xl",
"l-bold": "text-body-l font-bold",
"l-regular": "text-body-l",
"m-bold": "text-body-m font-bold",
"m-regular": "text-body-m",
"s-bold": "text-body-s font-bold",
"s-regular": "text-body-s",
};
---
<!-- // Importer komponenten, der skal bruges til at vise teksten-->
 <Htmlbodytext class:list={[sizeClasses[size], "font-montserrat text-grey-scale-950 text-pretty", stylingclasses]}><slot /></Htmlbodytext>