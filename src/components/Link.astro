---
const { href = "#", target = "_self" } = Astro.props;

const linkClasses = `
  font-raleway text-body-l text-grey-scale-950 lg:pl-space-100 lg:hover:font-bold
`;

const underlineClasses = `
  w-30 lg:overflow-hidden lg:transition-[clip-path] lg:duration-500 ease-out
  lg:[clip-path:inset(0_20%_0_0)]    
  group-hover:[clip-path:inset(0_0_0_0)]  
`;
---
<div class="flex flex-col group">
  <a href={href} target={target} class={linkClasses}>
    <slot />
  </a>

  <div class={underlineClasses}>
    <img src="../underline.svg" alt="underline" />
  </div>
</div>
