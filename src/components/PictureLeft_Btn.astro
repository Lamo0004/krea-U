---
import TextBody from "./TextBody.astro";
import TextHeading from "./TextHeading.astro";
import Button from "./Button.astro";
const { image, alt, heading, textbody1, textbody2, textbody3 } = Astro.props;
---

<section class="pb-space-1800">
    <div class="bg-primary-500">
        <div class="grid xl:grid-cols-2 place-items-center gap-8 px-space-500 lg:px-space-2400 py-space-1600">        
            <div>
                <img src={image} alt={alt} class="w-100 h-auto md:w-150 md:h-auto object-cover"/>
            </div>
            <div class="md:pl-space-400">
                <TextHeading size="xl" stylingclasses="pb-space-050">{heading}</TextHeading>
                <TextBody size="l-regular" stylingclasses="pb-space-100">{textbody1}</TextBody>
                <TextBody size="l-regular" stylingclasses="pb-space-100">{textbody2}</TextBody>
                <TextBody size="l-regular" stylingclasses="pb-space-200">{textbody3}</TextBody>
                <Button href="/koncept">MÃ¸d konceptet</Button>
            </div>
        </div>
    </div>
</section>