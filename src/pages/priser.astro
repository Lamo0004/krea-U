                            <img src="/ankelkæde.webp" alt="" class="pb-space-100">
                          </div>
                          <form method="dialog" class="modal-backdrop">
                            <button>close</button>
                          </form>
                        </dialog>                        
                      <TextHeading size="xs" stylingclasses="pb-space-050">Ankelkæde</TextHeading>    
                      <TextBody size="l-regular">Fra 149 kr.</TextBody>
                  </div>
                  <div>
                        <img src="/ring.webp" alt="ring med perler" class="pb-space-100" onclick="my_modal_26.showModal()">
                        <dialog id="my_modal_26" class="modal">
                          <div class="modal-box bg-primary-500" >
