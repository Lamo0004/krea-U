                        <img src="/nøglering.webp" alt="nøglering med perler" class="pb-space-100" onclick="my_modal_27.showModal()">
                        <dialog id="my_modal_27" class="modal">
                          <div class="modal-box bg-primary-500" >
                            <img src="/nøglering.webp" alt="" class="pb-space-100">
                          </div>
                          <form method="dialog" class="modal-backdrop">
                            <button>close</button>
